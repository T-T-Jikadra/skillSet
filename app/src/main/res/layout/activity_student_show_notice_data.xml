<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_Pirmary"
    tools:context=".Student_Dir.Student_ShowNoticeData">

    <include layout="@layout/toolbar_backbtn" />

    <RelativeLayout
        android:id="@+id/titlelayout_Noticedata"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginTop="25dp"
            android:text="Notice  :"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titlelayout_Noticedata"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="56dp"
        android:background="@drawable/file_round_corner"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/Notice_DataTitleTextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:hint="Title Description .."
            android:padding="12dp"
            android:textColor="#818080"
            android:textColorHint="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />

        <View
            android:id="@+id/dividerFB"
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_below="@+id/Notice_DataTitleTextview"
            android:layout_marginHorizontal="18dp"
            android:layout_marginTop="10dp"
            android:background="#7C7C7C"
            tools:ignore="ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/Notice_DataContenttextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:gravity="top"
            android:hint="Notice Description .."
            android:minLines="10"
            android:padding="12dp"
            android:textColor="#818080"
            android:textColorHint="#818080"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/Notice_DataTimeTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_marginStart="85dp"
            android:hint="Notice Time .."
            android:padding="12dp"
            android:textColor="#818080"
            android:textColorHint="@color/black"
            android:textSize="12sp"
            tools:ignore="HardcodedText" />

    </LinearLayout>

</RelativeLayout>

